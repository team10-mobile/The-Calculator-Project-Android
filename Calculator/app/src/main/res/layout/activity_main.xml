<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DrawerLayout"
    >

    <TextView
        android:id="@+id/textviewHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGreen"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/textviewExpression"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorGreen"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/buttonDel"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_delete"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
             />
        <Button
            android:id="@+id/buttonClear"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/btn_orther"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30sp" />
        <Button
            android:tag="minus"
            android:id="@+id/buttonPlusMinus"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/btn_orther"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="30sp" />
        <Button
            android:tag="operator"
            android:id="@+id/buttonPercent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/btn_operand"
            android:textColor="@color/colorPhim"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30sp" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber7"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber8"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"

            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"

            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber9"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp" />
        <Button
            android:tag="operator"
            android:id="@+id/buttonDiv"
            android:textColor="@color/colorPhim"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_operand"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber4"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber5"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber6"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp" />
        <Button
            android:tag="operator"
            android:id="@+id/buttonMultip"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_operand"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30sp"
            android:textColor="@color/colorPhim"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber1"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber2"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp" />
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber3"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp" />
        <Button
            android:tag="operator"
            android:id="@+id/buttonSub"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_operand"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@color/colorPhim"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:tag="num"
            android:id="@+id/buttonNumber0"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp" />
        <Button
            android:tag="dot"
            android:id="@+id/buttonDot"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp" />
        <Button
            android:tag="total"
            android:id="@+id/buttonTotal"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/btn_number"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp" />
        <Button
            android:tag="operator"
            android:id="@+id/buttonAdd"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_operand"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/colorPhim"
            />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/NavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:menu="@menu/menu_navigation"
        app:headerLayout="@layout/header_actionbar"
        />



</android.support.v4.widget.DrawerLayout>
